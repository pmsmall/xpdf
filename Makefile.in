INSTALL = @INSTALL@

prefix = @prefix@
exec_prefix = @exec_prefix@

all:
	cd goo; $(MAKE)
	cd ltk; $(MAKE)
	cd xpdf; $(MAKE) all

xpdf: dummy
	cd goo; $(MAKE)
	cd ltk; $(MAKE)
	cd xpdf; $(MAKE) xpdf$(EXE)

pdftops: dummy
	cd goo; $(MAKE)
	cd xpdf; $(MAKE) pdftops$(EXE)

pdftotext: dummy
	cd goo; $(MAKE)
	cd xpdf; $(MAKE) pdftotext$(EXE)

install:
	$(INSTALL) xpdf/xpdf$(EXE) @bindir@
	$(INSTALL) xpdf/pdftops$(EXE) @bindir@
	$(INSTALL) xpdf/pdftotext$(EXE) @bindir@
	$(INSTALL) xpdf.1 @mandir@/man1
	$(INSTALL) pdftops.1 @mandir@/man1
	$(INSTALL) pdftotext.1 @mandir@/man1

clean:
	cd goo; $(MAKE) clean
	cd ltk; $(MAKE) clean
	cd xpdf; $(MAKE) clean
dummy:
